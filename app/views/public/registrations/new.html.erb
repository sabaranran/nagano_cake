<h2>Sign up</h2>

<%= form_with model: @customer, url: registration_path(resource), local: true do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="field">
      名前<%= f.label '(性)' %><%= f.text_field :last_name %>
  </div>
  <div class="field">
    <%= f.label '(名)'%><%= f.text_field :first_name %>
  </div>
  <div class="field">
      フリガナ<%= f.label '(セイ)' %><%= f.text_field :last_name_kana %>
      <%= f.label '(メイ)'%><%= f.text_field :first_name_kana %>
  </div>
  <div class="field">
    <%= f.label :メールアドレス %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  <div class="field">
      郵便番号(ハイフンなし)<%= f.text_field :postal_code %>
  </div>
  <div class="field">
      住所<%= f.text_field :address %>
  </div>
  <div class="field">
      電話番号(ハイフンなし)<%= f.text_field :telephone_number %>
  </div>

  <div class="field">
    パスワード(6文字以上)
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    パスワード(確認用)
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<h2>既に登録済みの方</h2>

<p><%= render "public/shared/links" %>からログインしてください。</p>
